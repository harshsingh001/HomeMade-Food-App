<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/dialogue_logo_login">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-70dp"
            app:srcCompat="@drawable/ic_horizontal_logo_dialogue" />

        <ProgressBar
            android:id="@+id/progressBar"

            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogue_logo_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-200dp">

        <TextView
            android:id="@+id/txt_emailid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/acme"
            android:text="Email"
            android:textColor="#4E4A4A"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_emailid"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/acme"
            android:hint="example@gmail.com"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/acme"
            android:text="Password"
            android:textColor="#4E4A4A"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edt_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_passwd"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/acme"
            android:hint="example@123"
            android:password="true"
            android:textSize="30sp"
            tools:ignore="Deprecated" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/acme"
            android:id="@+id/login_button1"
            android:layout_below="@+id/edt_passwd"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:background="@color/black"/>


        <TextView
            android:id="@+id/ForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_button1"
            android:layout_centerInParent="true"
            android:layout_marginTop="10sp"
            android:autoLink="web"
            android:fontFamily="@font/acme"
            android:linksClickable="true"
            android:onClick="forgetPassword"
            android:text="Forgot Password ?"
            android:textColor="@color/linkblue" />

        <TextView
            android:id="@+id/registerbuttonRD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ForgetPassword"
            android:layout_centerInParent="true"
            android:layout_marginTop="10sp"
            android:autoLink="web"
            android:fontFamily="@font/acme"
            android:linksClickable="true"
            android:onClick="create_txt"
            android:text="Create Account"
            android:textColor="@color/linkblue" />
    </RelativeLayout>

</RelativeLayout>